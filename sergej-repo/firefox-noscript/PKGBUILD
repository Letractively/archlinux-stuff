pkgname=firefox-noscript
pkgver=1.9.9.35
_firefox_ver=3.6
pkgrel=2
pkgdesc="plugin for firefox which disables script"
arch=('any')
url="http://noscript.net/"
license=('GPL2')
depends=("firefox=${_firefox_ver}")
makedepends=('unzip')
source=(http://software.informaction.com/data/releases/noscript-$pkgver.xpi)
md5sums=('28f8cea89c3155c48ccf81bb9132ea5c')

build() {
    cd $srcdir		|| return 1
    #this method comes from gentoo (http://kambing.ui.edu/gentoo-portage/eclass/mozextension.eclass):
    local emid=$(sed -n -e '/<\?em:id>\?/!d; s/.*\([\"{].*[}\"]\).*/\1/; s/\"//g; p; q' install.rdf) || return 1
    local dstdir=$pkgdir/usr/lib/firefox-$_firefox_ver/extensions/${emid}
    install -d $dstdir		|| return 1
    sed -i 's#<em:maxVersion>.*</em:maxVersion>#<em:maxVersion>3.*</em:maxVersion>#' install.rdf
    cp -R * $dstdir		|| return 1
    rm $dstdir/noscript-$pkgver.xpi
}
