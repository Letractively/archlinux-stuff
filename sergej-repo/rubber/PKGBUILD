# Contributor: Baptiste Grenier <gwarf@gwarf.org>
pkgname=rubber
pkgver=1.1
pkgrel=2
pkgdesc="A wrapper for LaTeX and friends"
arch=('any')
url="http://www.pps.jussieu.fr/~beffara/soft/rubber"
license=('GPL')
groups=()
provides=()
depends=('python')
makedepends=('texinfo')
conflicts=()
replaces=()
backup=()
install=()
source=("http://ebeffara.free.fr/pub/$pkgname-$pkgver.tar.gz"
        "http://live.gnome.org/Gedit/LaTeXPlugin/FAQ?action=AttachFile&do=get&target=rubber-1.1-spaces.patch")
md5sums=('8087cdb498f51f91c2427c7d0b253189'
         '743f644122ba27c783748ac33510e4e8')

build() {
  cd $startdir/src/$pkgname-$pkgver
  patch -N -i "${startdir}/src/FAQ?action=AttachFile&do=get&target=rubber-1.1-spaces.patch" ${startdir}/src/rubber-1.1/src/rules/latex/__init__.py || return 1
  ./configure --prefix=/usr
  make || return 1
  make prefix=$startdir/pkg/usr install
}
