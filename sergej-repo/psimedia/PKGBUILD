# Contributor: Vladimir Kutyavin <vlkut-at-bk-dot-ru>

pkgname=psimedia
pkgver=1.0.3
pkgrel=1
pkgdesc="Voice and video chat plugin for Psi-like IM clients.  The implementation is based on GStreamer."
arch=('i686' 'x86_64')
license=('GPL2')
url="http://delta.affinix.com/psimedia/"
depends=('speex' 'gstreamer0.10-base' 'qt')
install=psimedia.install
source=(http://delta.affinix.com/download/psimedia/$pkgname-$pkgver.tar.bz2 \
	psimedia.sh)
md5sums=('1be71c37d71c655ffc2c53cf86c77a7a' 'dc69469bdba0537d346d5622a5f5d221')

build() {
    cd $srcdir/$pkgname-$pkgver
    ./configure
    make || return 1
    install -D -m644 ${srcdir}/$pkgname-$pkgver/gstprovider/libgstprovider.so ${pkgdir}/usr/lib/psi/libgstprovider.so && \
    install -D -m755 ${startdir}/psimedia.sh ${pkgdir}/etc/profile.d/psimedia.sh
}
