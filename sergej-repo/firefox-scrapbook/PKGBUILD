pkgname=firefox-scrapbook
pkgver=1.3.6
_firefox_ver=3.6
pkgrel=2
pkgdesc="plugin for firefox which can save and organize saved pages"
arch=('any')
url="http://amb.vis.ne.jp/mozilla/scrapbook/"
license=('GPL2')
depends=("firefox")
makedepends=('unzip')
_addons_file=41964
source=(scrapbook-$pkgver-fx.xpi::https://addons.mozilla.org/en-US/firefox/downloads/latest/427/)
md5sums=('2ea80de2e7e304f3e0c0b0bbc890ad44')

build() {
    cd $srcdir		|| return 1
    #this method comes from gentoo (http://kambing.ui.edu/gentoo-portage/eclass/mozextension.eclass):
    local emid=$(sed -n -e '/<\?em:id>\?/!d; s/.*\([\"{].*[}\"]\).*/\1/; s/\"//g; p; q' install.rdf) || return 1
    local dstdir=$pkgdir/usr/lib/firefox-$_firefox_ver/extensions/${emid}
    install -d $dstdir		|| return 1
    sed -i 's#<em:maxVersion>.*</em:maxVersion>#<em:maxVersion>3.*</em:maxVersion>#' install.rdf
    cp -R * $dstdir		|| return 1
    rm $dstdir/scrapbook-$pkgver-fx.xpi
}
