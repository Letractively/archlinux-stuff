# Contributor: Lukas Jirkovsky <l.jirkovsky@gmail.com>
pkgname=e16-docs
pkgver=0.16.8.0.1
pkgrel=1
pkgdesc="Enlightenment DR16 documentation"
arch=('i686' 'x86_64')
url="http://enlightenment.org/"
license=('BSD')
depends=('enlightenment>=0.16.8')
source=(http://downloads.sourceforge.net/sourceforge/enlightenment/$pkgname-$pkgver.tar.gz)
md5sums=('d92e6a7153b5433bafb2ff6561640dc4')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make DESTDIR=$startdir/pkg install
  install -D -m644 COPYING $startdir/pkg/usr/share/licenses/$pkgname/LICENSE
}
