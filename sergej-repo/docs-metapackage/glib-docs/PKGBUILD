# Maintainer: Marco Rocco <mr85mr@gmail.com>

pkgname=glib-docs
pkgver=2.18
pkgrel=0
pkgdesc="Documentation for glib to be used in devhelp"
arch=('i686' 'x86_64')
license=('GPL')
url="http://library.gnome.org/devel/glib/"
source=(http://library.gnome.org/devel/glib/glib-html-${pkgver}.${pkgrel}.tar.gz)

md5sums=('1474470eda31e40832f19de7c512efe2')

build () {
	# Create destination dir
	install -d ${startdir}/pkg/usr/share/devhelp/books/glib

	# Install documentation to destination
  install -D -m 644 ${startdir}/src/glib-html-${pkgver}.${pkgrel}/* \
    ${startdir}/pkg/usr/share/devhelp/books/glib
}

