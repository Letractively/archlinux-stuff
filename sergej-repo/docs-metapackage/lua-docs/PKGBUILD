pkgname=lua-docs
pkgver=5.1.4
pkgrel=1
pkgdesc="Lua documentation"
arch=(i686 x86_64)
url="http://www.lua.org/" 
license=(MIT)
source=($url/ftp/lua-$pkgver.tar.gz)
md5sums=('d0870f2de55d59c1c8419f36e8fac150')

build() { 
  cd $startdir
  mkdir -p $startdir/pkg/usr/share/doc/lua
  install -m644 src/lua-$pkgver/doc/*.{html,png,gif,css} $startdir/pkg/usr/share/doc/lua
}
# vim:set ts=2 sw=2 et:
