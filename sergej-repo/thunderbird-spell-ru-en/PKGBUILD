# Contributor: Evgenij Vdovin <evdovin@pochta.ru>

pkgname=thunderbird-spell-ru-en
pkgver=3
pkgrel=1
pkgdesc="Russian+English spellchecker dictionary for Thunderbird"
arch=('any')
url="http://mozutil.mozilla-russia.org/dict/"
license=('GPL')
depends=('thunderbird')
source=(http://mozutil.mozilla-russia.org/dict/spell-${pkgver}.zip)
md5sums=('75daff84bac8bf4ab62874d1b44527aa')

build(){
  cd $startdir/src/
  local _tbver=`pacman -Q thunderbird | cut -f2 -d\ | cut -f1 -d-`
  install -D -m644 RU_US.aff $startdir/pkg/usr/lib/thunderbird-${_tbver}/dictionaries/ru-us-RU.aff
  install -D -m644 RU_US.dic $startdir/pkg/usr/lib/thunderbird-${_tbver}/dictionaries/ru-us-RU.dic
}
