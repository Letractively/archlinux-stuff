# Contributor: Andrea Scarpino <andrea@archlinux.org>

pkgname=gcc-docs
pkgver=4.4.1
pkgrel=1
pkgdesc="Set of HTML documentation for GCC."
arch=('any')
url="http://gcc.gnu.org"
license=('GPL')
depends=('gcc')
options=('docs')
source=(http://gcc.gnu.org/onlinedocs/gcc-$pkgver/gcc-html.tar.gz)
md5sums=('da624a5a26259d0f3a86cfc102df3f11')

build(){
  cd "$srcdir/gcc"
  install -d ${pkgdir}/usr/share/doc/gcc
  cp -rf * ${pkgdir}/usr/share/doc/gcc || return 1
}
