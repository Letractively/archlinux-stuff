pkgname=dune2
pkgver=1.0
pkgrel=1
pkgdesc="Dune 2 strategy game"
arch=(any)
url="http://oldgames.ru"
license=('custom')
depends=(dosbox bash)
makedepends=(unrar)
source=('http://oldgames.ru:8080/D/Dune_2.rar'
	'http://oldgames.ru:8080/D/Dune_2_RUS.rar')
md5sums=('39ea7c054108b52e3897783e174c7441'
         '544e947f73df714e7c514567c19d9023')

build() {
  cd "$srcdir/"
  unrar x 'Dune_2.rar' || return 1
  unrar x -ad 'Dune_2_RUS.rar' || return 1

  local game=dune2

  mkdir -p $pkgdir/usr/share/ $pkgdir/usr/bin/
  cp -r "DUNE2" $pkgdir/usr/share/$game || return 1
  cp -r "Dune_2_RUS" $pkgdir/usr/share/$game-ru || return 1
  echo -e "#!/bin/sh\n\ndosbox -c 'mount c /usr/share/$game' -c 'c:' -c '$game' -c 'exit'" >$pkgdir/usr/bin/$game
  echo -e "#!/bin/sh\n\ndosbox -c 'mount c /usr/share/$game-ru' -c 'c:' -c '$game' -c 'exit'" >$pkgdir/usr/bin/$game-ru
  chmod 0755 $pkgdir/usr/bin/$game*
}
