# FIXME:
pkgname=sim
pkgver=0.9.3
pkgrel=1
depends=()
pkgdesc="SIM (Simple Instant Messenger) - plugins-based instant messenger with support various protocols"
source=(http://dl.sourceforge.net/sourceforge/sim-icq/$pkgname-$pkgver-2.tar.gz \
	sim-0.9.3-gcc34.diff \
	sim-0.9.3-alt-histpreview-apply-fix.diff \
	my-ionized-sim-48x48-p2.patch)
url="http://sim-icq.sourceforge.net"
md5sums=('b16e462076540acc13da81832ae79d00' '899d5f26e1fdd2cdf7ba7f3b254c6827'\
         'd445cf2393c585b9f264237be7e9ccdd' '35153e2601e8beed49be2730a1bc22b2')

build()        {
	cd $startdir/src/$pkgname-$pkgver
	# add patches from gentoo
	patch -Np2 -i ../my-ionized-sim-48x48-p2.patch || return 1
	patch -Np1 -i ../sim-0.9.3-gcc34.diff || return 1
	patch -Np1 -i ../sim-0.9.3-alt-histpreview-apply-fix.diff || return 1
        ./configure --prefix=/opt/qt --disable-debug --disable-kde --with-qt-dir=/opt/qt
        make || return 1
        make DESTDIR=$startdir/pkg install
}
