# Contributor: Sergej Pupykin <ps@lx-ltd.ru>
pkgname=synaptics
pkgver=0.14.4
pkgrel=1
pkgdesc="synaptics touchpad driver for xorg"
url="http://web.telia.com/~u89404340/touchpad/index.html"
license="GPL"
depends=(xorg)
conflicts=()
replaces=()
backup=()
install=
source=(http://web.telia.com/~u89404340/touchpad/files/synaptics-0.14.4.tar.bz2)
md5sums=(ae9aef7a146346fbfc7edfdd63cdd273)

build() {
  cd $startdir/src/$pkgname-$pkgver
  sed -i 's#BINDIR = $(DESTDIR)/usr/local/bin#BINDIR = $(DESTDIR)/usr/bin#' ./Makefile
  sed -i 's#MANDIR = $(DESTDIR)/usr/local/man#MANDIR = $(DESTDIR)/usr/man#' ./Makefile
  make || return 1
  make DESTDIR=$startdir/pkg install
}
