# Contributor: Vinay S Shastry <vinayshastry@gmail.com>

pkgname=rpm
pkgver=4.6.0rc1
_pkgver=4.6.0-rc1
pkgrel=1
pkgdesc="Red Hat Package Manager"
arch=('i686' 'x86_64')
url="http://www.rpm.org/"
license=('GPL')
depends=('bzip2' 'sqlite3' 'popt' 'neon' 'beecrypt')
source=(http://rpm.org/releases/testing/rpm-${_pkgver}.tar.bz2)
md5sums=('083184a85aec253cb4c4662c46379925')

build() {
  cd $startdir/src/$pkgname-${_pkgver}

  export CFLAGS="-I/usr/include/db4.5 -I/usr/include/nss -I/usr/include/nspr $CFLAGS"
  export CPPFLAGS="-I/usr/include/db4.5 -I/usr/include/nspr -I/usr/include/nss $CPPFLAGS"

  rm -rf popt
  ./configure --prefix=/usr --without-python --without-selinux \
              --without-perl --with-external-db
  make || return 1
  make DESTDIR=$startdir/pkg install
}
