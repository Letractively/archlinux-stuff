# Contributor: Vinay S Shastry <vinayshastry@gmail.com>

pkgname=rpm
pkgver=4.4.2.3
pkgrel=1
pkgdesc="Red Hat Package Manager"
arch=('i686' 'x86_64')
url="http://www.rpm.org/"
license=('GPL')
depends=('bzip2' 'sqlite3' 'popt' 'neon' 'beecrypt')
source=(http://www.rpm.org/releases/rpm-4.4.x/$pkgname-$pkgver.tar.gz)
md5sums=('b8f0661ac765ce1a2de66ca53e37af83')

build() {
  # Build seems to break with this set
  unset MAKEFLAGS

  cd $startdir/src/$pkgname-$pkgver

  # Use system popt
  rm -rf popt
  ./configure --prefix=/usr --without-python --without-selinux \
              --without-perl
  make || return 1
  make DESTDIR=$startdir/pkg install
}
